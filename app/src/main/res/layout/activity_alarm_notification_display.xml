<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/display_background"
    tools:context="com.practice.sonnguyen.alarmmanager_practice.activity.AlarmNotificationDisplayActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a4b4949"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <TextClock
            android:id="@+id/acti_alarmdisplay_txt_clockdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00h00"
            android:textColor="@android:color/white"
            android:textSize="50dp" />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/minion_alarm" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <Button
                android:id="@+id/acti_alarmdisplay_btn_off"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:textColor="@color/white"
                android:layout_alignBaseline="@+id/acti_alarmdisplay_btn_sleep"
                android:layout_alignBottom="@+id/acti_alarmdisplay_btn_sleep"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom|left"
                android:layout_marginStart="23dp"
                android:background="@drawable/rippe"
                android:textStyle="bold"
                android:text="Tắt" />

            <Button
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/acti_alarmdisplay_btn_sleep"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="21dp"
                android:background="@drawable/rippe"
                android:text="Báo lại" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
