<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ffffff"
    tools:context="com.practice.sonnguyen.alarmmanager_practice.activity.AlarmNotificationDisplayActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/alarm_display"/>

    <TextClock
        android:id="@+id/acti_alarmdisplay_txt_clockdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00h00"
        android:textSize="50dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <Button
            android:id="@+id/acti_alarmdisplay_btn_off"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="23dp"
            android:background="@drawable/rippe"
            android:text="OFF"
            android:layout_alignBaseline="@+id/acti_alarmdisplay_btn_sleep"
            android:layout_alignBottom="@+id/acti_alarmdisplay_btn_sleep"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/acti_alarmdisplay_btn_sleep"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="21dp"
            android:background="@drawable/rippe"
            android:text="SLEEP"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
</LinearLayout>
