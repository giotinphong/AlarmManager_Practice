<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/item_margin"
        android:id="@+id/item_cardview_detail"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_textclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List day"
                    android:textColor="@android:color/black"

                    android:textSize="15dp"
                    android:id="@+id/item_txt_listDay"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhac nho"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/item_txt_note"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:orientation="vertical"
                >
                <android.support.v7.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:id="@+id/item_switch_on_off"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"/>

                <!--<Button-->
                    <!--android:id="@+id/item_btn_del"-->
                    <!--style="@style/Widget.AppCompat.Button"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--android:background="#00ffffff"-->
                    <!--android:focusable="true"-->
                    <!--android:text="Del"-->
                    <!--android:textAlignment="textEnd"-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:textColorHighlight="@color/white"-->
                    <!--android:textSize="20dp" />-->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
