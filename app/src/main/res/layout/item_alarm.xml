<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"


    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:elevation="5dp"

        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_textclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List day"
                    android:textColor="@android:color/black"

                    android:textSize="15dp"
                    android:id="@+id/item_txt_listDay"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhac nho"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/item_txt_note"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:orientation="vertical"
                >
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/item_btnCheck"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/toggle_switch_background" />

                <Button
                    android:id="@+id/item_btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_marginTop="30dp"
                    android:background="#00ffffff"
                    android:textColorHighlight="@color/white"
                    android:text="Del"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    style="@style/Widget.AppCompat.Button"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
